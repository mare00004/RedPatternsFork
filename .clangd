If:
  PathMatch: [".*\\.(cu|cuh)$"]
CompileFlags:
  Add: [
    -xcuda,
    --cuda-gpu-arch=sm_86,
    --cuda-path=/usr/local/cuda-12.0,
    -I/usr/local/cuda-12.0/include,
    -Iinclude,
    -Ithird_party/argtable3
  ]

If:
  PathMatch: [".*\\.(c|h)$"]
CompileFlags:
  Add: ["-xc", -Iinclude, -Ithird_party/argtable3]
